<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headingOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="TRACK OTHER"
        android:textAlignment="center"
        android:textColor="#3F058D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listOfInvitedConnections"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headingOther" />

    <!-- Empty view for the list -->
    <LinearLayout
        android:id="@+id/empty_connection_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inviteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calm" />

        <TextView
            android:id="@+id/empty_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="6dp"
            android:text="@string/connectionHeading"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#133241"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="15dp"
            android:text="@string/connectionMessage"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#235877"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
