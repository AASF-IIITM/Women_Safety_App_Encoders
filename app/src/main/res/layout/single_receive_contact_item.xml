<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="vertical"
        android:id="@+id/person_linear_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:layout_weight="4"
        android:padding="7dp"
        >

        <TextView
            android:id="@+id/person_receive_name"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Person Name"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/person_receive_number"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Person Phone Number"
            android:textStyle="bold"
            android:textSize="16sp"
            />


    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:id="@+id/acceptButton"
        android:background="@drawable/ic_insert_emoticon_black_24dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:id="@+id/rejectButton"
        android:background="@drawable/ic_sentiment_dissatisfied_black_24dp"/>


</LinearLayout>

